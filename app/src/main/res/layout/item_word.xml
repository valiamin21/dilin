<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/standard_margin_x2"
    android:layout_marginTop="@dimen/standard_margin"
    android:layout_marginBottom="@dimen/standard_margin"
    app:cardCornerRadius="@dimen/standard_radius"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    android:clickable="true">



    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_pronun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/standard_margin"
            android:layout_alignParentLeft="true">

            <FrameLayout
                android:id="@+id/frm_us"
                android:layout_width="@dimen/standard_icon_size"
                android:layout_height="@dimen/standard_icon_size"
                android:layout_marginTop="@dimen/standard_margin"
                android:layout_marginHorizontal="@dimen/standard_margin"
                android:layout_alignParentLeft="true"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/united_state_flag"
                    android:adjustViewBounds="true"
                    android:alpha="0.4"/>

                <ImageButton
                    android:id="@+id/img_speech_us"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_action_volume_up"
                    android:scaleType="center"
                    android:background="@null"/>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/frm_uk"
                android:layout_width="@dimen/standard_icon_size"
                android:layout_height="@dimen/standard_icon_size"
                android:layout_marginTop="@dimen/standard_margin"
                android:layout_marginLeft="@dimen/standard_margin"
                android:layout_alignParentLeft="true"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/united_kingdom_flag"
                    android:adjustViewBounds="true"
                    android:alpha="0.4"/>

                <ImageButton
                    android:id="@+id/img_speech_uk"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_action_volume_up"
                    android:scaleType="center"
                    android:background="@null"/>
            </FrameLayout>
        </LinearLayout>

        <com.example.amin.dictionande.custom_views.CustomEnglishTextView
            android:id="@+id/txt_voc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_pronun"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/standard_margin"
            android:layout_marginBottom="@dimen/standard_margin"
            android:textColor="@color/english_words_color"
            android:textSize="@dimen/standard_font_size_large"
            tools:text="word : " />

        <com.example.amin.dictionande.custom_views.CustomPersianTextView
            android:id="@+id/txt_meaning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_voc"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="@dimen/standard_margin_x3"
            android:layout_marginBottom="@dimen/standard_margin"
            android:textColor="@color/persian_words_color"
            android:textSize="@dimen/standard_font_size_large"
            tools:text="معنای کلمه این می باشد و دارای دو حالت فعلی و اسمی می باشد که دارای معانی مت" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_meaning"
            android:layout_marginTop="@dimen/standard_margin_x2"
            android:layout_marginRight="@dimen/standard_margin"
            android:layout_marginBottom="@dimen/standard_margin"
            android:gravity="right"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_delete"
                android:layout_width="@dimen/standard_icon_size"
                android:layout_height="@dimen/standard_icon_size"
                android:layout_marginHorizontal="@dimen/standard_margin"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_action_delete" />

            <ImageButton
                android:id="@+id/btn_bookmark"
                android:layout_width="@dimen/standard_icon_size"
                android:layout_height="@dimen/standard_icon_size"
                android:layout_marginHorizontal="@dimen/standard_margin"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="fitCenter"
                tools:src="@drawable/ic_action_bookmark" />

            <ImageButton
                android:id="@+id/btn_edit"
                android:layout_width="@dimen/standard_icon_size"
                android:layout_height="@dimen/standard_icon_size"
                android:layout_marginHorizontal="@dimen/standard_margin"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_action_edit" />

        </LinearLayout>

    </RelativeLayout>


</android.support.v7.widget.CardView>