<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ir.proglovving.dilin.custom_views.CusTextView
        android:id="@+id/txt_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:paddingRight="@dimen/standard_padding"
        android:paddingLeft="@dimen/standard_padding"
        android:text="نمایشِ"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/standard_font_size_large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/standard_margin_x2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/txt_show"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/radioButton_fav_notebooks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="دفترهای مورد علاقه"
            android:textSize="@dimen/standard_font_size_large" />

        <RadioButton
            android:id="@+id/radioButton_all_notebooks"
            android:checked="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/standard_margin_x2"
            android:text="همه‌ی دفترها"
            android:textSize="@dimen/standard_font_size_large" />

    </RadioGroup>

</android.support.constraint.ConstraintLayout>